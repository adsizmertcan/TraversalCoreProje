@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="zxx">


<body>
    <div class="py-3"></div>
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4">
                Alanında en yetkin rehberlerimizle en güncel seyahat hikalerimizi okumalısınız!
            </h3>
            <div class="blog-post-align">
                <div class="blog-post-img">
                    <a href="#"><img src="@Model.Guide.GuideImageUrl" alt="" class="rounded-circle img-fluid" /></a>
                </div>
                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">
                        <a>@Model.Guide.GuideName</a> | Tur Rotaları:  <a>@Model.Guide.GuideDesc</a>
                    </div>
                    <ul class="blog-meta">
                        <li class="meta-item blog-lesson">
                            <span class="meta-value"> @Model.Date.ToShortDateString() </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content">
                        <img src="@Model.CoverImage" style="width:1170px; height:530px" class="radius-image img-fluid mb-5" alt="" />
                    </div>
                </div>
                <div class="single-post-content">
                    <p class="alphabet mb-4"></p>
                    <p class="mb-4">
                        @Model.Details1
                    </p>
                    <blockquote class="blockquote my-5">
                        <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                        @Model.Description
                    </blockquote>
                    <p class="mb-4">
                        @Model.Details2
                    </p>

                    <div class="d-grid left-right mt-5 pb-md-5">
                        <div class="buttons-singles tags">
                            <h4>Etiketler :</h4>
                            <a href="#blog-tag">Seyahat</a>
                            <a href="#blog-tag">Kültür</a>
                            <a href="#blog-tag">Otel</a>
                            <a href="#blog-tag">Yemek</a>
                        </div>
                        <div class="buttons-singles">
                            <h4>Share :</h4>
                            <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-instagram" aria-hidden="true"></span></a>
                        </div>
                    </div>

                    <div class="author-card mt-5">
                        <div class="row align-items-center">
                            <div class="col-sm-3 col-6">
                                <div>
                                    <img src="@Model.Guide.GuideImageUrl" alt="" class="rounded-circle img-fluid">
                                </div>
                            </div>
                            <div class="col-sm-9 mt-sm-0 mt-3">
                                <h3 class="mb-3 title">@Model.Guide.GuideName</h3>
                                <p>
                                    @Model.Guide.GuideLongDesc
                                </p>
                                <ul class="author-icons mt-4">
                                    <li>
                                        <a class="twitter" href="@Model.Guide.GuideTwitter">
                                            <span class="fa fa-twitter"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="instagram" href="@Model.Guide.GuideInstagram">
                                            <span class="fa fa-instagram"
                                                  aria-hidden="true"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    @await Component.InvokeAsync("_CommentList",new {id = ViewBag.Id})

                    @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")
                </div>
            </div>
    
</div></section>

</body>

</html>

