@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>MediatR Rehber Ekleme Sayfası</h1>

<form method="post">
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="GuideName" />
    <br />
    <label>Görsel</label>
    <input type="text" class="form-control" asp-for="GuideImageUrl" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="GuideDesc" />
    <br />
    <button class="btn btn-outline-success">Ekle</button>
</form>