@model TraversalCoreProject.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mail Gönderme Sayfası</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Alıcının Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Konu")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea cols="30" rows="6" asp-for="Body" class="form-control"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-success">Mail Gönder</button>
</form>

