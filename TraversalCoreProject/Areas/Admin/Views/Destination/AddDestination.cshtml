@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rota Oluşturma Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="DestinationCity" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Gün Gece")
        <input type="text" asp-for="DestinationTime" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="DestinationPrice" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Ana Görsel")
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="CoverImage" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Detay 1")
        <textarea cols="30" rows="6" class="form-control" asp-for="Details1"></textarea>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Detay 2")
        <textarea cols="30" rows="6" class="form-control" asp-for="Details2"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-success">Rota Oluştur</button>
</form>

