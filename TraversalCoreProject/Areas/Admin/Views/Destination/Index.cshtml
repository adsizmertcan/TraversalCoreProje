@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sitede Gör</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        { count += 1; }
        <tr>
                <td>@count</td>
                <td>@item.DestinationCity</td>
                <td>@item.DestinationPrice</td>
                <td>@item.Capacity</td>
                <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-primary">Sitede Gör</a></td>
                <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-info">Güncelle</a></td>
                <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }

</table>
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-success">Yeni Tur Rotası</a>

