@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
		<th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        { count += 1; }
        <tr>
            <td>@count</td>
			<td><img src="@item.GuideImageUrl" height="50"; width="50" class="rounded-circle" /></td>
            <td>@item.GuideName</td>
            <td>@item.GuideDesc</td>
                @{
                    @if (item.Status == true)
                    {
					<td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Pasif Yap</a></td>
				    }
                    else
                    {
                    <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-success">Aktif Yap</a></td>
                    }
                }
            <td><a href="/Admin/Guide/UpdateGuide/@item.GuideID" class="btn btn-outline-info">Düzenle</a></td>
            <td><a href="/Admin/Guide/DeleteGuide/@item.GuideID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-outline-success">Yeni Rehber Ekle</a>