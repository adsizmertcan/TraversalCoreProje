@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS Yeni Tur Rotası Ekleme Sayfası</h1>

<form method="post">
    <label>Şehir Adı</label>
    <input type="text" asp-for="DestinationCity" class="form-control" />
    <br />
    <label>Gün-Gece</label>
    <input type="text" asp-for="DestinationTime" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="DestinationPrice" class="form-control" />
    <br />
    <label>Kapasite</label>
    <input type="text" asp-for="Capacity" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Ekle</button>
</form>
