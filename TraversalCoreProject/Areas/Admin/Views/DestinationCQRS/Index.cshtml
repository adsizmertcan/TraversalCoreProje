@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>CQRS Rotası Tur Verileri</h1>

<table class="table table-bordered">
   <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Gün-Gece</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Güncelle</th>
        <th>Sil</th>
   </tr>
   @foreach (var item in Model)
    {
        { count++; }
        <tr>
            <td>@count</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Price$</td>
            <td>@item.Capacity</td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.ID" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.ID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/Admin/DestinationCQRS/AddDestination" class="btn btn-outline-success">Yeni Tur Rotası Ekle</a></td>
