@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    int count = 0;
}

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Tur Rotası Arama Sayfası</h4>
				<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
				<div class="heading-elements">
					<ul class="list-inline mb-0">
						<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
						<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
						<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
						<li><a data-action="close"><i class="ft-x"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="card-content collapse show">
				<div class="card-body">
					<p class="card-text">Alanında Uzman Rehberlerimiz Eşliğinde Balkanlardan Orta Asyaya, Doğu Avrupadan, Anadolunun Dört Bir Yanına En Uygun Fiyatlarla Sunduğumuz Tur Listemize Ve Tur Detaylarına Aşağıdaki Tablodan Erişebilirsiniz.</p>
					<form asp-action="Index" asp-area="Member">
						<div>
							<b>Lütfen Aranacak Şehri Giriniz</b>
							<input type="text" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" />
							<br />
							<input type="submit" value="Şehir Ara" class="btn btn-outline-success" />
						</div>

					</form>
					<div class="table-responsive mt-3">
						<table class="table">
							<tr>
								<th>#</th>
								<th>Şehir</th>
								<th>Süre</th>
								<th>Kapasite</th>
								<th>Fiyat</th>
								<th>Detaylar</th>
							</tr>
							<tbody>
								@foreach (var item in Model)
								{
									{ count += 1; }
									<tr>
										<td>@count</td>
										<td>@item.DestinationCity</td>
										<td>@item.DestinationTime</td>
										<td>@item.Capacity</td>
										<td>@item.DestinationPrice$</td>
										<td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info">Detaylar</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
